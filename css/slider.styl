principal_rojo = #9A0B0B
principal_amarillo = #EDEA02
principal_gris = #282828
div
  &.sheet-slider
    background-color #444
    font-size 16px
    margin 0 auto
    overflow hidden
    position relative
    width 100%
    box-shadow 0px 10px 15px black
    & > div
      &.conten
        transition margin-left 0.76s cubic-bezier(0.54, 0, 0.1, 1) 0s
        -moz-transition margin-left 0.76s cubic-bezier(0.54, 0, 0.1, 1) 0s
        -ms-transition margin-left 0.76s cubic-bezier(0.54, 0, 0.1, 1) 0s
        -o-transition margin-left 0.76s cubic-bezier(0.54, 0, 0.1, 1) 0s
        -webkit-transition margin-left 0.76s cubic-bezier(0.54, 0, 0.1, 1) 0s
    input
      display none
    div
      &.tab
        line-height 0
        display block
        img
          width 100%
        .text
          left 0
          line-height 1.4
          opacity 0
          padding-left 38px
          padding-top 60px
          -webkit-font-smoothing antialiased
          position absolute
          text-shadow 0 1px 1px rgba(0, 0, 0, 0.3), 0 1px 5px rgba(0, 0, 0, 0.16)
          top 90px
          max-width 500px
          & > span
            font-size 1em
          h3
            font-size 2.12em
            margin 0
            overflow inherit
            text-overflow inherit
      &.text
        a
          color principal_amarillo
          font-weight bold
          text-decoration none
          &:hover
            color darken(principal_amarillo,15%)
            text-decoration none
      &.conten
        overflow hidden
        position relative
        width 100%
        z-index 600
        div
          &.tab
            float left
            position relative
            width 100%
    .sh-btns
      bottom 0
      left 0
      margin 0 auto
      position absolute
      right 0
      width 90%
      z-index 700
      label
        background-clip content-box
        background-color rgba(255, 255, 255, 0.5)
        background-origin content-box
        cursor pointer
        display block
        float left
        height 8px
        padding-right 2px
        width 100%
        &:last-child
          padding 0
        &:hover
          background-color rgba(255, 255, 255, 0.76)
    &.n2
      .sh-btns
        label
          width 50%
      div
        &.conten
          width 200%
          div
            &.tab
